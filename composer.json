{
	"name": "forrest79/tracy-remotebar",
	"description": "Show Tracy bars from API, cli or classic web requests on a separate remote client.",
	"keywords": ["tracy", "remote", "bar"],
	"type": "library",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Jakub Trmota",
			"email": "jakub@trmota.cz"
		}
	],
	"require": {
		"ext-curl": "^8.3",
		"tracy/tracy": "^2.11",
		"php": "^8.3"
	},
	"require-dev": {
		"forrest79/phpcs": "^2.3",
		"forrest79/phpcs-ignores": "^0.6",
		"latte/latte": "^3.1",
		"nette/application": "^3.2",
		"nette/bootstrap": "^3.2",
		"nette/di": "^3.2",
		"phpstan/phpstan": "^2.1",
		"phpstan/phpstan-nette": "^2.0",
		"phpstan/phpstan-strict-rules": "^2.0",
		"shipmonk/phpstan-rules": "^4.1"
	},
	"autoload": {
		"psr-4": {
			"Forrest79\\TracyRemoteBar\\": "src/"
		}
 	},
	"autoload-dev": {
		"psr-4": {
			"Forrest79\\TracyRemoteBar\\Tests\\": "tests/"
		}
	},
	"bin": ["bin/run-tracy-remote-bar-server"],
	"scripts": {
		"tests": "tests/run-tests.php",
		"phpcs": "vendor/bin/phpcs --bootstrap=vendor/forrest79/phpcs-ignores/src/bootstrap-outdated.php --extensions=php --ignore=vendor/*,temp/* -q -s src tests example",
		"phpstan": "vendor/bin/phpstan analyse src tests example"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": false
		}
	}
}
